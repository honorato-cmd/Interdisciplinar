@using Pato.Models
@{
    Layout = "/Views/Layout.cshtml";
    ViewBag.Title = "Novo Produto";
}
<nav class="navbar navbar-expand-lg">
</nav>
<ul class="nav justify-content-center">
<ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="/Produto" aria-current="page">Inicial</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/Produto/Create" aria-current="page">Cadastrar</a>
        </li>
</ul>
</ul>
<nav class="navbar navbar-expand-lg">
</nav>
<ul class="nav justify-content-center">
<div class="col-5">


    <div class="card border-secondary mb-3">
        <div class="card-body text-secondary">

<form action="/Produto/Create" method="POST">
    <div class="col-md-4 position-relative">
        <label>Nome</label>
        <input type="text" class="form-control" name="Nome"/>
    </div>
        <div class="col-md-4 position-relative"></div>
            <label>Valor</label>
            <input type="decimal" class="form-control" name="Valor"/>
        </div>

        <div class="col-md-4 position-relative">
            <label>Estoque</label>
            <input type="number" class="form-control" name="Estoque"/>
        </div>
        <div class="col-md-4 position-relative">
        <label>Fornecedor</label>
        <select name="IdFornecedor" class="form-control">
            @foreach(var fornecedor in ViewBag.Fornecedores)
            {
            <option value="@fornecedor.IdFornecedor">@fornecedor.nomeFantasia</option>
            }
        </select>
    </div>
    </div> 
    


    <button class="btn btn-dark bg-dark" style="margin-top: 20px">Salvar</button>
</ul>
    </div>
    </div>
</div>
</ul>
</form>